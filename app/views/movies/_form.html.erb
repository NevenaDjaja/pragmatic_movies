<%= form_for @movie do |f| %>
<p>
	<%= f.label :title %>
	<%= f.text_field :title, autofocus: true %>
</p>
<p>
	<%= f.label :description %><br/>
	<%= f.text_area :description, cols: 50, rows: 8 %>
</p>
<p>
	<%= f.label :rating %>
	<%= f.text_field :rating, size: 7 %>
</p>
<p>
	<%= f.label :released_on %>
	<%= f.date_select :released_on %><br/>
</p>
<p>
	<%= f.label :total_gross %>
	<%= f.number_field :total_gross %>
</p>
<p>
	<%= f.label :cast %>
	<%= f.text_field :cast, size: 50 %>
</p>
<p>
	<%= f.label :director %>
	<%= f.text_field :director %>
</p>
<p>
	<%= f.label :duration %>
	<%= f.text_field :duration %>
</p>
<p>
	<%= f.label :image_file_name %>
	<%= f.text_field :image_file_name %>
</p>
<p>
	<%= f.submit %> |
	<%= link_to 'Cancel', movies_path %>
</p>

<% end %>